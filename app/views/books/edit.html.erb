<% if @book.errors.any? %>
  <%= @book.errors.count %>error occurred
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<h1>編集画面</h1>
<%= form_with model: @book, url: update_book_path(@book.id),method: :patch do |f| %>

  <h4>タイトル</h4>
  <%= f.text_field :title %>

  <h4>感想</h4>
  <%= f.text_area :body %>

  <%= f.submit '保存' %>

  <%= link_to "詳細画面", book_path(@book.id) %>
  <%= link_to "戻る", books_path(@book.id) %>

<% end %>