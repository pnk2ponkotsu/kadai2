<h1>投稿一覧</h1>
<% @books.each do |book| %>

  <h4>タイトル</h4>
  <span><%= book.title %></span>

  <%= link_to "詳細画面", book_path(book.id) %>
  <%= link_to "編集", edit_book_path(book.id) %>
  <%= link_to "削除", destroy_book_path(book.id), method: :delete, "data-confirm" => "削除してもよろしいですか？" %>

<% end %>

<H1>新規投稿</H1>
<% if @book.errors.any? %>
  <%= @book.errors.count %>error occurred
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @book do |f| %>
  <H4>タイトル</H4>
  <%= f.text_field :title %>

  <h4>感想</h4>
  <%= f.text_area :body %>
  <%= f.submit '投稿' %>
<% end %>